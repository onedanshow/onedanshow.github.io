<!doctype html>
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title= current_page.data.title || "DanielDixon.com"
    %link{href: "//maxcdn.bootstrapcdn.com/bootswatch/3.3.4/superhero/bootstrap.min.css", rel: "stylesheet"}
    /%link{href: "//cdnjs.cloudflare.com/ajax/libs/flickity/1.0.0/flickity.min.css", rel: "stylesheet"}
    = stylesheet_link_tag "all"
    = javascript_include_tag  "all"
  %body{:class => page_classes}
    .container
      .header.clearfix
        %nav.bs-component
          %ul.nav.nav-pills.pull-right
            %li.active Work
            %li About
            %li Contact
        %h3
          Daniel Dixon

      = yield

    %script{src:"//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.1.1/isotope.pkgd.min.js"}
    /%script{src: "//cdnjs.cloudflare.com/ajax/libs/flickity/1.0.0/flickity.pkgd.min.js"}